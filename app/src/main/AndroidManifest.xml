<manifest xmlns:android = "http://schemas.android.com/apk/res/android"
    package = "com.jenbumapps.e_passbordumsa_admin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup = "true"
        android:icon = "@mipmap/ic_launcher"
        android:label = "@string/app_name"
        android:name=".app.App"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon = "@mipmap/ic_launcher"
        android:supportsRtl = "true"
        android:theme = "@style/AppTheme" >

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.jenbumapps.e_passbordumsa_admin.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_list" />
        </provider>


        <activity android:name = ".PermitDetailActivity" />
        <activity android:name = ".DashboardActivity"/>
        <activity android:name = ".ImageViewerActivity" />
        <activity android:name = ".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name = ".LoginActivity" />

        <meta-data
            android:name = "preloaded_fonts"
            android:resource = "@array/preloaded_fonts" />
    </application>
</manifest>
